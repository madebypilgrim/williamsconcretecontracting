{#
{% extends craft.app.request.isAjax() and not craft.app.request.isLivePreview() ? '_layouts/blank' : '_layouts/main' %}
#}
{% extends '_layouts/main' %}

{# Markup #}
{% block left %}
    {% include '_components/sticky-background' with {
        image: entry.backgroundImage.one(),
    } %}
{% endblock %}

{% block right %}
    <article>
        <header>
            {% include '_components/page-heading' with {
                heading: entry.pageHeading,
            } %}
        </header>

        <section>
            {% include '_components/overview-teasers' with {
                teasers: entry.overviewTeasers.all(),
            } %}
        </section>
    </article>
{% endblock %}
