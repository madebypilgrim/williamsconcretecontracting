{##
 # Main layout
 # @block {string} left
 # @block {string} right
 #}

{% import '_macros/components' as components %}

{# Params #}
{% set left %}
    {% block left %}{% endblock %}
{% endset %}
{% set right %}
    {% block right %}{% endblock %}
{% endset %}

{# Markup #}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en-US">
    <head>
        {% include '_meta/data' %}
        {% include '_meta/favicons' %}

        {# Main stylesheet #}
        <link rel="stylesheet" type="text/css" href="/styles/index.1578257495502.css" />

        {% if constant('CRAFT_ENVIRONMENT') == 'production' %}
            {% include '_meta/google-analytics' %}
        {% endif %}
    </head>

    <body data-no-js="true">
        <script type="text/javascript">
            document.body.setAttribute('data-no-js', false);
        </script>

        {{ components.scaffold() }}

        <header>
            {% include '_components/header' %}
        </header>

        <main>
            {% include '_components/main' with {
                left: left,
                right: right,
            } %}
        </main>

        <footer>
            {% include '_components/footer' %}
        </footer>

        {# Main scripts #}
        <script type="text/javascript" src="/scripts/index.1578257495502.js"></script>

        {# LiveReload (development only) #}
        {% if constant('CRAFT_ENVIRONMENT') == 'development' %}
            <script>document.write('<script src=\"http://' + (location.host || 'localhost').split(':')[0] + ':35729/livereload.js?snipver=1\"></' + 'script>')</script>
        {% endif %}
    </body>
</html>
